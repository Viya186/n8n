{
  "extends": ["./tsconfig.json", "@n8n/typescript-config/tsconfig.build.json"],
  "compilerOptions": {
    "outDir": "dist",
    "composite": true,
    "tsBuildInfoFile": "dist/build.tsbuildinfo"
  },
  "include": [
    "credentials/**/*.ts",
    "credentials/translations/**/*.json",
    "nodes/**/*.ts",
    "nodes/**/*.json",
    "test/**/*.ts",
    "types/**/*.ts",
    "utils/**/*.ts",
    "nodes/vector_store/**/*.ts"
  ],
  "exclude": ["nodes/**/*.test.ts", "test/**"]
}
